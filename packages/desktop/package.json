{
  "name": "preke-studio",
  "version": "2.0.0",
  "description": "Preke Studio Desktop - Remote control for R58 devices",
  "private": true,
  "main": "app/main/index.js",
  "author": {
    "name": "Itagenten",
    "email": "support@itagenten.no"
  },
  "scripts": {
    "dev": "npm run build:renderer && npm run build:main && electron .",
    "build:renderer": "cd ../frontend && cross-env ELECTRON_BUILD=true npm run build",
    "dev:hot": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 npm run build:main && electron .",
    "dev:watch": "concurrently \"npm run watch:main\" \"wait-on app/main/index.js && electron .\"",
    "build:main": "tsc -p tsconfig.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "watch:main": "tsc -p tsconfig.json --watch",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:unsigned": "npm run build && electron-builder --mac -c.mac.identity=null",
    "clean": "rimraf app dist"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "electron-log": "^5.1.7",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extends": "electron-builder.yml"
  }
}

